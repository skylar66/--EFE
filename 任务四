}
.left{
	position: relative;
	float: left;
	width: 50px;
	height: 50px;
	background: #fc0;
	border-bottom-right-radius: 100px;

}
.right{
	position:relative;
	float: right;
	margin-top: 150px;
	width: 50px;
	height: 50px;
	background: #fc0;
	border-radius: 100px 0 0 0;
}
	
